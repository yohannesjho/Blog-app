 
<main>
    <form action="/blog" method="POST" class="w-1/2 mx-auto p-4  my-4 border border-gray-200 rounded-lg shadow-md bg-white">
        <div class="mb-4">
            <label for="title" class="block text-gray-700">Title:</label>
            <input type="text" id="title" name="title" class="w-full px-3 py-2 border border-gray-300 rounded-md" required>
        </div>
        <div class="mb-4">
            <label for="content" class="block text-gray-700">Content:</label>
            <textarea id="content" name="content" rows="10" class="w-full px-3 py-2 border border-gray-300 rounded-md" required></textarea>
        </div>
        <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded-md">Submit</button>
    </form>
</main>